--[[
    üß† Manual Steal ‚Äî Steal a Brainrot
    Teleports player to base when picking up someone else's Brainrot
]]

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local Backpack = LocalPlayer:WaitForChild("Backpack")
local Character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()

-- ‚úÖ Set your base location here
local basePosition = Vector3.new(0, 5, 0)

-- üîò Toggle Manual Steal
local ManualStealEnabled = true

-- üõ∏ Teleport Function
local function teleportToBase()
    if Character and Character:FindFirstChild("HumanoidRootPart") then
        Character:MoveTo(basePosition)
        print("[Manual Steal] Teleported to base")
    end
end

-- üîç Check if item is a stolen Brainrot
local function isStolenBrainrot(item)
    return item:IsA("Tool") and item.Name:lower():find("brainrot") and item:FindFirstChild("Owner") and item.Owner.Value ~= LocalPlayer.Name
end

-- üîÅ Monitor Backpack and Character
Backpack.ChildAdded:Connect(function(item)
    if ManualStealEnabled and isStolenBrainrot(item) then
        teleportToBase()
    end
end)

Character.ChildAdded:Connect(function(item)
    if ManualStealEnabled and isStolenBrainrot(item) then
        teleportToBase()
    end
end)

-- üß© Optional GUI Toggle
local gui = Instance.new("ScreenGui", LocalPlayer:WaitForChild("PlayerGui"))
local toggle = Instance.new("TextButton", gui)
toggle.Size = UDim2.new(0, 200, 0, 40)
toggle.Position = UDim2.new(0, 10, 0, 10)
toggle.Text = "Manual Steal: ON"
toggle.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
toggle.TextColor3 = Color3.fromRGB(255, 255, 255)
toggle.Font = Enum.Font.Gotham
toggle.TextSize = 16

toggle.MouseButton1Click:Connect(function()
    ManualStealEnabled = not ManualStealEnabled
    toggle.Text = "Manual Steal: " .. (ManualStealEnabled and "ON" or "OFF")
    print("[Manual Steal] Toggled:", ManualStealEnabled)
end)
